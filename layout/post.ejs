<section class="posts">
    <article class="post">
        <div class="post-flag"></div>
        <div class="post-title">
            <a class="post-title-link" href="<%- url_for(page.path) %>"><%=page.title%></a>
        </div>
        <div class="post-meta">
            <span class="post-author">
                <% if(page.author){ %>
                    <%- page.author %>
                <% }else{ %>
                    <%- config.author %>
                <% } %>
                &nbsp;&nbsp;&nbsp;&nbsp;
            </span>
            <span class="post-time"><%- date(page.date, "YYYY-MM-DD") %></span>
            <br/>
            <span class="post-tags">
                <% if ((page.tags) && (page.tags.length > 0)) { %>
                    
                    <%- list_tags(page.tags, {
                        show_count: 0,
                        style: 'none',
                        class: '',
                        separator: '、'
                    }) %>
                <% } %>
            </span>
        </div>
        <div class="post-content">
            <%- page.content %>
        </div>
    </article>
</section>