::-webkit-scrollbar  
{  
    width: 6px;  
    background-color: #F5F5F5;  
}

::-webkit-scrollbar-thumb
{
  background-color: #555;
}

body {
	margin: 0;
	line-height: 150%;
}

a {
	text-decoration:none;
}

.header {
	border-top: 3px solid #222;
}

.blog-header {
    padding-top: 30px;
    padding-bottom: 30px;
    text-align: center;
}

.blog-menu {
	text-align: center;	
	background: #fafafa;
	padding: 10px;
}

.blog-menu-item {
	display: inline;
	margin-left: 50px;
	margin-right: 50px;
}

.blog-menu-item a{
	color: #555;
}

.blog-title {
    margin-top: 30px;
    margin-bottom: 0;
    font-weight: 100;
    font-size: 48px;
}

.blog-title a, .blog-title a:hover {
    color: rgba(80, 80, 80, 1);
    text-decoration: none;
}

.footer {
    margin-top: 10px;
    background: #f5f5f5;
    text-align: center;
    color: #666;
}

.blog-footer-container {
    padding-top: 15px;
    padding-bottom: 10px;
} 

pre, code {
  font-family: "PingFang SC", consolas, Menlo, "Microsoft YaHei", monospace;
}

code {
  padding: 2px 4px;
  word-wrap: break-word;
  color: #555;
  background: #eee;
  border-radius: 3px;
  font-size: 13px;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
  empty-cells: show;
  border: 1px solid #e2e2e2;
  width: 100%;
}

table th {
  white-space: nowrap;
  color: #444;
  font-weight: 600;
  background: #eee;
}

table td, table th {
  border: 1px solid #e2e2e2;
  padding: 8px 16px;
  text-align: left;
}

.back-to-top {
  width: 32px;
  height: 32px;
  position: fixed;
  right: 30px;
  bottom: 15px;
}

.posts {
  margin-left: 25%;
  margin-right: 25%;
  
  border: 1px solid #fafafa;
  padding: 2px;
}

.post {
  margin-top: 30px;
  margin-bottom: 10px;
}

.post-title {
  text-align: center;
}

.post-title a {
  font-size: 2em;
  color: #555;
  border-bottom:1px solid #555
}

.post-meta {
  color: #999;
  text-align:center
  padding-top: 15px;
}

